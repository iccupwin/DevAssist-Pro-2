# ===== DEVASSIST PRO ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://devassist:devassist_secure_password@localhost:5432/devassist_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devassist_pro
DB_USER=devassist
DB_PASSWORD=devassist_secure_password

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== AI PROVIDERS =====
# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (GPT)
OPENAI_API_KEY=your-openai-api-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key

# ===== OAUTH PROVIDERS =====
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Yandex OAuth
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ===== REACT FRONTEND CONFIGURATION =====
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_YANDEX_CLIENT_ID=your-yandex-client-id
REACT_APP_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# ===== STREAMLIT LEGACY =====
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ===== FILE UPLOAD CONFIGURATION =====
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,docx,xlsx,txt

# ===== EMAIL CONFIGURATION =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ===== SENTRY MONITORING (Optional) =====
SENTRY_DSN=your-sentry-dsn

# ===== ENVIRONMENT =====
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# ===== SECURITY =====
SECRET_KEY=your-secret-key-for-django-compatibility
ALLOWED_HOSTS=localhost,127.0.0.1,devassist.local

# ===== DOCKER CONFIGURATION =====
COMPOSE_PROJECT_NAME=devassist_pro
DOCKER_BUILDKIT=1

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=20

# ===== CACHE CONFIGURATION =====
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# ===== ANALYTICS =====
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# ===== WEBHOOK CONFIGURATION =====
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30