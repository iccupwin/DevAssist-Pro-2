# DevAssist Pro Environment Variables
# Скопируйте этот файл как .env и заполните актуальными значениями

# ===== DATABASE =====
POSTGRES_DB=devassist_pro
POSTGRES_USER=devassist
POSTGRES_PASSWORD=devassist_password
POSTGRES_URL=postgresql://devassist:devassist_password@localhost:5432/devassist_pro

# ===== REDIS =====
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379/0

# ===== JWT AUTHENTICATION =====
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# ===== AI PROVIDER API KEYS =====
# OpenAI API Key для GPT моделей
OPENAI_API_KEY=sk-your-openai-api-key-here
# Anthropic API Key для Claude моделей  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# Google AI API Key (опционально)
GOOGLE_API_KEY=your-google-ai-api-key-here

# ===== MICROSERVICES URLS =====
AUTH_SERVICE_URL=http://localhost:8001
LLM_SERVICE_URL=http://localhost:8002
DOCUMENTS_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004
REPORTS_SERVICE_URL=http://localhost:8005
DASHBOARD_SERVICE_URL=http://localhost:8006

# ===== FILE STORAGE =====
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=pdf,docx,txt

# ===== DEVELOPMENT =====
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development
RELOAD=false

# ===== CORS =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ===== LLM CONFIGURATION =====
DEFAULT_LLM_PROVIDER=openai
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_RETRIES=3
FALLBACK_ENABLED=true

# ===== SECURITY =====
TRUSTED_HOSTS=localhost,127.0.0.1,*.devassist.pro

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60