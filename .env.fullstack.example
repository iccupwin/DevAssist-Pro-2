# ===========================================
# DevAssist Pro - Fullstack Environment Variables
# ===========================================
# Скопируйте этот файл в .env и настройте значения для вашего окружения

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
TZ=Europe/Moscow

# ===== DATABASE CONFIGURATION =====
POSTGRES_PASSWORD=your_super_secure_postgres_password_here
POSTGRES_PORT=5432

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=your_super_secure_redis_password_here
REDIS_PORT=6379

# ===== CORS CONFIGURATION =====
# Добавьте ваши домены через запятую
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===== AI PROVIDER CONFIGURATION =====
# ОБЯЗАТЕЛЬНО: Anthropic API ключ для Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# ОПЦИОНАЛЬНО: OpenAI API ключ для GPT моделей
OPENAI_API_KEY=sk-your-openai-api-key-here

# ОПЦИОНАЛЬНО: Google API ключ для Gemini моделей
GOOGLE_API_KEY=your-google-api-key-here

# ===== SECURITY SETTINGS =====
# ВАЖНО: Замените на случайные secure ключи в production
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long

# ===== OAUTH CONFIGURATION =====
# Google OAuth (для социальной авторизации)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Yandex OAuth (для социальной авторизации)
YANDEX_CLIENT_ID=your-yandex-oauth-client-id
YANDEX_CLIENT_SECRET=your-yandex-oauth-client-secret

# ===== EMAIL CONFIGURATION =====
# SMTP настройки для отправки email уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== MONITORING AND ANALYTICS =====
ENABLE_MONITORING=true

# Sentry для error tracking (опционально)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== FILE STORAGE =====
# Путь для хранения данных на хосте
DATA_PATH=./data

# ===== SSL CONFIGURATION (для HTTPS) =====
# Раскомментируйте и настройте для HTTPS
# SSL_CERT_PATH=/path/to/your/cert.pem
# SSL_KEY_PATH=/path/to/your/private.key

# ===== BACKUP CONFIGURATION =====
# Настройки для автоматического бекапа БД
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket

# ===== PERFORMANCE TUNING =====
# Настройки производительности
# WORKER_PROCESSES=auto
# WORKER_CONNECTIONS=1024
# CLIENT_MAX_BODY_SIZE=100M

# ===== DEVELOPMENT OVERRIDES =====
# Для разработки можно переопределить настройки
# DEV_FRONTEND_URL=http://localhost:3000
# DEV_BACKEND_URL=http://localhost:8000